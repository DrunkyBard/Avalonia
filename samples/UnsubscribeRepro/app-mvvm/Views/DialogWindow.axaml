<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaAppTemplate.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaAppTemplate.Views.DialogWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaAppTemplate">

  <Design.DataContext>
    <vm:DialogWindowViewModel />
  </Design.DataContext>

  <StackPanel Orientation="Vertical">
    <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    <Button Content="Reset Content and Close"  Click="Button_OnClick"/>
    <Button Content="Close"  Click="Button2_OnClick"/>
    
    <!-- <ItemsControl ItemsSource="{Binding Items}"/> -->
  </StackPanel>

</Window>